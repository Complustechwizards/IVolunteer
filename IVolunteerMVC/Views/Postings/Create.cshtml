@model IVolunteerMVC.Models.ProjectModel.Posting

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Posting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JobTitle" class="control-label"></label>
                <input asp-for="JobTitle" class="form-control" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLocation" class="control-label"></label>
                <select asp-for="JobLocation" class="form-control">
                    <option value="Lagos">Lagos</option>
                    <option value="Anambra">Anambra</option>
                    <option value="Abia">Abia</option>
                    <option value="Enugu">Enugu</option>
                    <option value="Rivers">Rivers</option>
                    <option value="Ebonyi">Ebonyi</option>
                    <option value="Oyo">Oyo</option>
                    <option value="Abuja">Abuja</option>
                    <option value="Imo">Imo</option>
                </select>
                <span asp-validation-for="JobLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control">
                    <option value="Administration">Administration</option>
                    <option value="Science">Science</option>
                    <option value="Art">Art</option>
                    <option value="Commercial">Commercial</option>
                    <option value="Language">Language</option>
                    <option value="Councelling">Councelling</option>
                </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
</div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea name="editor1" asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfVolunteersNeeded" class="control-label"></label>
                <input asp-for="NumberOfVolunteersNeeded" class="form-control" />
                <span asp-validation-for="NumberOfVolunteersNeeded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeRequirementFrom" class="control-label"></label>
                <input asp-for="AgeRequirementFrom" class="form-control" />
                <span asp-validation-for="AgeRequirementFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeRequirementTo" class="control-label"></label>
                <input asp-for="AgeRequirementTo" class="form-control" />
                <span asp-validation-for="AgeRequirementTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <select asp-for="State" class="form-control">
                    <option value="Open">Open</option>
                    <option value="Closed">Closed</option>
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="DateOfPosting" value="@DateTime.Now" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
