@model IVolunteerMVC.Models.ProjectModel.JobApplication

@{
    ViewData["Title"] = "Create";
}


<h2>JobApplication</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CoverLetter" class="control-label"></label>
                <textarea asp-for="CoverLetter" name="editor1" class="form-control" ></textarea>
                <span asp-validation-for="CoverLetter" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="DateOfApplication" value="@DateTime.Now" class="form-control" />
                
            </div>
            <div class="form-group">
                <input type="submit" value="Apply" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
